.classification {
  width: 100%;
  background-color: #fff;
}
.classification .classification-one {
  width: 95%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
}
.classification .classification-one .classificationList {
  width: 90%;
  font-size: 25rpx;
}
.classification .classification-one .classificationList:hover {
  color: #4a79e0;
}
.classification .classification-one .icon {
  width: 10%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.classification .screen {
  width: 95%;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
}
.classification .screen .screen-title {
  width: 95%;
  margin: 20rpx auto;
  display: flex;
  align-items: center;
}
.classification .screen .screen-box {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  position: relative;
  margin-left: 5rpx;
  padding-bottom: 20rpx;
}
.classification .screen .screen-box .screen-box-text {
  border: 1px solid #545454;
  padding: 10rpx 60rpx;
  border-radius: 30rpx;
  color: #545454;
  margin: 10rpx 20rpx;
}
.classification .screen .screen-box .right {
  position: absolute;
  top: 5rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  border-radius: 50rpx;
  background-color: #4a79e0;
}